<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_background"
    android:orientation="vertical"
    android:layout_marginTop="-400dp"
    android:weightSum="1"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:layout_toRightOf="@id/settingback_text"
            android:textSize="20sp"
            android:layout_marginLeft="32dp"
            android:textColor="@color/colorDark"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nanumgodic"
            android:textStyle="bold"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_24"
            android:id="@+id/mypage_settingbutton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/mypage_background1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:id="@+id/mypage_profile"
                        android:src="@drawable/usericon"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="18dp"
                        app:civ_circle_background_color="@color/gray_background"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userText"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/mypage_profile">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:text="사용자"
                            android:textSize="18sp"
                            android:textColor="@color/colorDark"
                            android:fontFamily="@font/nanumgodic"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:text="010+6501-8557"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumgodic"
                            android:textColor="@color/gray_text" />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp">
                        <ImageView
                            android:id="@+id/mainsetting_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/setting_18dp"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/mainsetting_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="회원정보"
                            android:textColor="@color/colorDark"
                            android:layout_toRightOf="@id/mainsetting_image"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:fontFamily="@font/nanumgodic"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자녀 정보"
                    android:fontFamily="@font/nanumgodic"
                    android:textColor="@color/colorDark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_18dp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorWhite"
                    android:id="@+id/studentcard_settingbutton"
                    android:layout_toLeftOf="@id/mypage_addbutton"
                    android:layout_marginRight="8dp"/>
                <ImageButton
                    android:id="@+id/mypage_addbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/add_circle"
                    android:background="@color/colorWhite"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="vertical"
                android:background="@drawable/mypage_background1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mypage_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/bellicon"
                    android:layout_width="28dp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_height="28dp"
                    android:src="@drawable/bell"/>
                <TextView
                    android:layout_toRightOf="@id/bellicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림센터"
                    android:textColor="@color/colorDark"
                    android:textSize="16sp"
                    android:fontFamily="@font/nanumgodic"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="더 보기"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nanumgodic"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/mypage_background1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="18dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="18dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/alertTitle_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="공지사항 등록알림"
                                android:textColor="@color/colorDark"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/alertTitle_text1"
                                android:text="PM 4:33"
                                android:textColor="@color/gray_text"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="김용환님"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="새로운 공지사항이 등록되었습니다."
                            android:textColor="@color/gray_text"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/arrow_right_black_18" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:paddingLeft="18dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/alertTitle_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="공지사항 등록알림"
                                android:layout_centerVertical="true"
                                android:textSize="18sp"
                                android:textColor="@color/colorDark"/>
                            <TextView
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/alertTitle_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="PM 4:33"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김용환님"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="새로운 공지사항이 등록되었습니다."
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text" />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_black_18"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:paddingLeft="18dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/alertTitle_text_test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="공지사항 등록알림"
                                android:layout_centerVertical="true"
                                android:textSize="18sp"
                                android:textColor="@color/colorDark"/>
                            <TextView
                                android:layout_marginLeft="12dp"
                                android:layout_toRightOf="@id/alertTitle_text_test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="PM 4:33"
                                android:textSize="12sp"
                                android:textColor="@color/gray_text"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김용환님"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="새로운 공지사항이 등록되었습니다."
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text" />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right_black_18"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>