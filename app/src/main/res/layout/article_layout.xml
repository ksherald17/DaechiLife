<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:id="@+id/article_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="밥을 뭐 먹을까?"
            android:textSize="20sp"
            android:layout_marginLeft="24dp"
            android:textColor="@color/colorDark"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/nanumgodic"
            android:textStyle="bold"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_content"
        android:text="내용 내요오오오옹"
        android:fontFamily="@font/nanumgodic"
        android:textColor="@color/gray_text"
        android:layout_marginLeft="24dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
    <TextView
        android:id="@+id/article_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumgodic"

        android:text="김용환"
        android:paddingLeft="24dp"
        android:textColor="@color/gray_text"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/article_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/article_name"
            android:textColor="@color/gray_text"
            android:text="3월 28일 오전 12:43"
            android:fontFamily="@font/nanumgodic"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/viewnum"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/article_viewnum"/>
    <TextView
        android:id="@+id/article_viewnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDark"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:text="11"
        android:fontFamily="@font/nanumgodic"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/article_comment_icon"/>

        <ImageView
            android:id="@+id/article_comment_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/comment"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/article_commentnum"/>
        <TextView
            android:id="@+id/article_commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/colorDark"
            android:text="16"
            android:fontFamily="@font/nanumgodic"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_line"/>

</LinearLayout>