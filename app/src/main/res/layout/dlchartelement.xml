<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="#ffffff"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlchartelementlayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/dlchartcardview"
        app:cardElevation="0dp"
        app:cardCornerRadius="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/dlchartnumbertext"
                    android:layout_width="0dp"
                    android:padding="1dp"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:layout_weight="0.14"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:fontFamily="@font/numberfont"
                    android:text="1"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    >


                    <RelativeLayout
                        android:id="@+id/dlchartsubjectlayout"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="0dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/roundedcorner"
                        >

                        <ImageView
                            android:id="@+id/dlchartimageview"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/grayperson"
                            />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/dlchartchangeimage"
                        android:layout_centerVertical="true"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/upimg"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.51"
                    android:gravity="center"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/dlchartteachername"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumgodic"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이지정 선생님"/>

                    <TextView
                        android:id="@+id/dlchartacademyname"
                        android:textColor="#808080"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="KNS어학원"/>

                    <TextView
                        android:layout_marginTop="0dp"
                        android:id="@+id/dlchartsubjecttext"
                        android:textSize="0dp"
                        android:textColor="#3bb9ff"
                        android:fontFamily="@font/nanumgodic"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="영어"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expandlinearlayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center|right">

                    <ImageView
                        android:id="@+id/chartelementexpand"
                        android:layout_marginRight="8dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/expandgray"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@mipmap/greygradient">




            </LinearLayout>

        </LinearLayout>

            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ededed"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>