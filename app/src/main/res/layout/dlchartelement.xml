<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="#ffffff"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlchartelementlayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/dlchartcardview"
        app:cardElevation="0dp"
        app:cardCornerRadius="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    >

                    <RelativeLayout
                        android:id="@+id/dlchartsubjectlayout"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="4dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/roundedcorner"
                        >

                        <ImageView
                            android:id="@+id/dlchartimageview"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/person"
                            />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/dlchartchangeimage"
                        android:layout_centerVertical="true"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/upimg"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="18dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.59"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:gravity="top"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/dlchartacademyname"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="@font/sregular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="KNS어학원"/>

                    <TextView
                        android:id="@+id/dlchartteachername"

                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/sregular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:text="이지정 선생님"/>


                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dlchartnumbertext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="22dp"
                    android:layout_weight="0.20"
                    android:textColor="#181818"
                    android:gravity="center_vertical|right"
                    android:fontFamily="@font/kbizr"
                    android:text="1"/>


            </LinearLayout>


        </LinearLayout>

            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ededed"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>