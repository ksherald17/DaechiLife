<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/classcodilayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:background="@drawable/classcordi"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="15sp"
            android:id="@+id/codifirsttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#181818"
            android:fontFamily="@font/nanumgodic"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="검색하신 "/>

        <TextView
            android:textSize="15sp"
            android:id="@+id/codisecondtext"
            android:layout_toRightOf="@id/codifirsttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FAB617"
            android:fontFamily="@font/nanumgodic"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:text="'이승철 선생님'"/>

        <TextView
            android:textSize="15sp"
            android:id="@+id/codithirdtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#181818"
            android:layout_toRightOf="@id/codisecondtext"
            android:fontFamily="@font/nanumgodic"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="느낌으로 추천해 드립니다."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:id="@+id/codidescriptiontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#181818"
            android:fontFamily="@font/nanumgodic"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="현재 가장 인기있는 고1 수학 선생님들입니다."/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/coditotalnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="14sp"
                android:fontFamily="@font/nanumgodic"
                android:layout_marginLeft="15dp"
                android:text="총 5명"/>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:background="@drawable/codisave"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="14dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/star"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/codisaveteachers"
                    android:layout_width="wrap_content"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:textColor="#181818"
                    android:fontFamily="@font/nanumgodic"
                    android:layout_marginRight="10dp"
                    android:text="모두 저장"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/codiresultfirst"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/codiresult"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:fontFamily="@font/nanumgodic"
                android:text="#김종성"/>

            <TextView
                android:id="@+id/codiresultsecond"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/codiresult"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:fontFamily="@font/nanumgodic"
                android:text="#현우진"/>

            <TextView
                android:id="@+id/codiresultthird"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/codiresult"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:fontFamily="@font/nanumgodic"
                android:text="#한석원"/>

            <TextView
                android:id="@+id/codiresultfourth"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/codiresult"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:fontFamily="@font/nanumgodic"
                android:text="#이창무"/>

            <TextView
                android:id="@+id/codiresultfifth"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/codiresult"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:fontFamily="@font/nanumgodic"
                android:text="#권경수"/>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>