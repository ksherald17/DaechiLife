<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="#DE1738"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                app:cardCornerRadius="0dp"
                android:id="@+id/tablayout">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:id="@+id/tab_layoutsearch"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/searchtoolbarlayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#DE1738"
                app:contentScrim="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/searchtapbelow"
                        android:layout_width="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.57">

                        <EditText
                            android:id="@+id/searchresulttext"
                            android:layout_marginRight="15dp"
                            android:hint="선생님, 학원명, 학교명으로 수업을 검색하세요."
                            android:paddingLeft="10dp"
                            android:textColorHint="#808080"
                            android:textSize="15dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="#757575"
                            android:layout_width="match_parent"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:layout_height="match_parent"
                            android:background="@drawable/searchtext"/>

                        <ImageView
                            android:id="@+id/searchimgicon"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginRight="25dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/searchtap"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/searchtapbelow2"
                        android:layout_width="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_height="0dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_weight="0.4">

                        <TextView
                            android:id="@+id/searchfilter1"
                            android:layout_marginRight="5dp"
                            android:text="학년"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="#000066"
                            android:fontFamily="@font/kbizr"
                            android:layout_width="0dp"
                            android:layout_weight="0.24"
                            android:layout_height="match_parent"
                            android:background="@drawable/searchtext2"/>

                        <TextView
                            android:id="@+id/searchfilter2"
                            android:layout_marginRight="5dp"
                            android:text="과목"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="#000066"
                            android:fontFamily="@font/kbizr"
                            android:layout_width="0dp"
                            android:layout_weight="0.24"
                            android:layout_height="match_parent"
                            android:background="@drawable/searchtext2"/>

                        <TextView
                            android:id="@+id/searchfilter3"
                            android:layout_marginRight="5dp"
                            android:text="정규/특강"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="#000066"
                            android:fontFamily="@font/kbizr"
                            android:layout_width="0dp"
                            android:layout_weight="0.24"
                            android:layout_height="match_parent"
                            android:background="@drawable/searchtext2"/>

                        <TextView
                            android:id="@+id/searchfilter4"
                            android:layout_marginRight="1dp"
                            android:text="내신/수능"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="6dp"
                            android:textColor="#000066"
                            android:fontFamily="@font/kbizr"
                            android:layout_width="0dp"
                            android:layout_weight="0.24"
                            android:layout_height="match_parent"
                            android:background="@drawable/searchtext2"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>
            </android.support.v7.widget.CardView>

        </android.support.design.widget.CoordinatorLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E0E0E0"/>

    <FrameLayout
        android:id="@+id/searchcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>


