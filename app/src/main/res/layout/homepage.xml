<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_marginTop="0dp"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:scrollbarFadeDuration="2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEF2F9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp">

                <LinearLayout
                    android:paddingTop="4dp"
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="7dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Daechi IT"
                                android:fontFamily="@font/titlefont"
                                android:textColor="#ed1d24"
                                android:textSize="28dp"
                                android:gravity="center"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/redcorner"
                                android:gravity="center">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="5dp"
                                    android:background="#ffffff">

                                    <EditText
                                        android:layout_marginTop="1dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="13sp"
                                        android:textColor="#181818"
                                        android:fontFamily="@font/nanumgodic"
                                        android:textColorHint="#707070"
                                        android:hint="선생님, 학원, 학교명으로 수업을 검색하세요."
                                        android:focusedByDefault="false"
                                        android:background="@android:color/transparent"/>

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="5dp"
                                        android:src="@mipmap/searchblack"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="155dp"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/mainbanner2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/topbanner"
                            android:background="#ffffff"
                            android:scaleType="fitXY" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginBottom="1dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/korean"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="국어"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/mathicon"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="수학"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/englishicon"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="영어"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/scienceicon"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="과학"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/socialicon"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="사탐"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/one"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="고1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/two"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="고2"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/three"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="고3"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/best"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="인기"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_weight="0.2">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@mipmap/team"/>

                            <TextView
                                android:layout_marginTop="3dp"
                                android:textColor="#181818"
                                android:textSize="15sp"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_height="wrap_content"
                                android:text="팀수업"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/mainbanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/mainbanner2"
                    android:background="#ffffff"
                    android:scaleType="fitXY" />


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="랭킹"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#181818"
                            android:textSize="20sp"/>

                        <LinearLayout
                            android:paddingBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="right|center_vertical">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:src="@mipmap/clock2"/>

                            <TextView
                                android:layout_marginRight="18dp"
                                android:textColor="#A0A0A0"

                                android:gravity="center"
                                android:fontFamily="@font/sregular"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="13sp"
                                android:text="4월 26일"/>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <android.support.design.widget.TabLayout
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="320dp"
                            android:layout_height="35dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:tabIndicatorColor="#e26e6e"
                            app:tabIndicatorHeight="1dp"
                            app:tabTextColor="#A0A0A0"
                            app:tabMode="fixed"
                            app:tabSelectedTextColor="#e26e6e"
                            app:tabTextAppearance="@style/tab_text"
                            android:id="@+id/maincharttab"
                            android:weightSum="1">

                            <android.support.design.widget.TabItem
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:text="TOP"/>

                            <android.support.design.widget.TabItem
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="0.12"
                                android:text="국어"/>

                            <android.support.design.widget.TabItem
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="0.12"

                                android:text="수학"/>

                            <android.support.design.widget.TabItem
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="0.12"
                                android:text="영어"/>

                            <android.support.design.widget.TabItem
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="0.12"
                                android:text="과탐"/>

                            <android.support.design.widget.TabItem
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_weight="0.12"
                                android:text="사탐"/>

                        </android.support.design.widget.TabLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:background="#ffffff">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/dlhomechart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>


                    </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="520dp"
                        android:background="#ffffff"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="#DC143C"
                                >

                            </LinearLayout>


                            <TextView
                                android:id="@+id/homerecommendschool"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_marginLeft="20dp"
                                android:textStyle=""
                                android:layout_marginTop="105dp"
                                android:textColor="#ffffff"
                                android:text="경기고 학부모's CHOICE"/>

                            <TextView
                                android:layout_below="@id/homerecommendschool"
                                android:id="@+id/homerecommendschooldes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="@font/nanumgodic"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:textColor="#ffffff"
                                android:text="현재 경기고생들이 가장 관심 가지고 있는 수업들!"/>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/homerecommendschoolRV"
                                android:layout_below="@id/homerecommendschooldes"
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="match_parent">


                            </android.support.v7.widget.RecyclerView>




                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:background="#ffffff"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:id="@+id/titletext4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/godoroundedl"
                                    android:text="학부모 수다방"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                     />

                                <TextView
                                    android:id="@+id/titletext5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/godoroundedl"
                                    android:text="전날 가장 핫했던 게시물"
                                    android:textColor="#424242"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/homeboardhotRV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="15dp"
                            android:background="#ffffff">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginRight="18dp"
                                android:background="@drawable/seemoretext"
                                android:fontFamily="@font/nanumgodic"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="더보기"
                                android:textColor="#ff8a80"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titletext8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/godoroundedl"
                            android:text="대학입학전형"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/entranceRV"
                            android:layout_marginLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                            android:orientation="horizontal"
                            >

                        </android.support.v7.widget.RecyclerView>


                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="#ffffff"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <TextView
                                    android:id="@+id/titlehometalk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/godoroundedl"
                                    android:text="익명토크"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
