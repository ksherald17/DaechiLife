<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_marginTop="-1200dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/titlefinal0"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:text="DaechiLife"/>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/alarmbell"
                        android:layout_marginRight="15dp"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/searchtap"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:layout_width="29dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:layout_height="29dp"
                        android:fontFamily="@font/nanumgodic"
                        android:background="@drawable/roundoval"
                        android:layout_marginRight="10dp"
                        android:text="승현"/>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.smarteist.autoimageslider.SliderLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:id="@+id/bannerSlider"/>


                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="#ffffff"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                app:cardElevation="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/titletext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대라차트"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:fontFamily="@font/nanumgodic"/>


                        <TextView
                            android:layout_alignParentRight="true"
                            android:id="@+id/godlchart"
                            android:text="더 보기"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:paddingBottom="2dp"
                            android:textSize="11sp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#ededed"
                            android:layout_alignParentTop="true"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dlhomechart">

                    </android.support.v7.widget.RecyclerView>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#F8F8F8"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/titletext3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수업추천"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:fontFamily="@font/nanumgodic"/>


                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/homedlclassrecommendRV"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#DCDCDC">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@mipmap/hansukone"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/titletext4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="대라 수다방"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:fontFamily="@font/nanumgodic"/>

                            <TextView
                                android:id="@+id/titletext5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전날 가장 핫한 게시물"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="#424242"
                                android:textSize="13sp"
                                android:fontFamily="@font/nanumgodic"/>

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/homeboardhotRV"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="더보기"
                            android:textStyle="bold"
                            android:textColor="#FAB617"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:fontFamily="@font/nanumgodic"
                            android:gravity="center"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:background="@drawable/seemoretext"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DCDCDC"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/titlehometalk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="익명토크"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:fontFamily="@font/nanumgodic"/>

                            <TextView
                                android:layout_toRightOf="@id/titlehometalk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="따끈따근한 익명 질문들"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="#424242"
                                android:textSize="13sp"
                                android:fontFamily="@font/nanumgodic"/>


                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/hometalkRV"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="더보기"
                            android:textStyle="bold"
                            android:textColor="#FAB617"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:fontFamily="@font/nanumgodic"
                            android:gravity="center"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:background="@drawable/seemoretext"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DCDCDC"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#F8F8F8"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_marginTop="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="추천 선생님"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:fontFamily="@font/nanumgodic"/>


                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/teacherrecommendRV"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                            />


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
