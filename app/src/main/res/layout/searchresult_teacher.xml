<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#ffffff"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/teachersearchresult"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumgodic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이지정 선생님"/>

                    <TextView
                        android:id="@+id/teachernotice"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:fontFamily="@font/nanumgodic"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/gudok"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="알림 ON"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#181818"
                        android:id="@+id/teacherdescription"
                        android:textSize="13sp"
                        android:fontFamily="@font/nanumgodic"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#내신영어 #수능영어"/>

                    <TextView
                        android:id="@+id/teacherwatch"
                        android:layout_marginRight="9dp"
                        android:gravity="right"
                        android:textSize="12sp"
                        android:fontFamily="@font/nanumgodic"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="조회수 2.1천회"/>

                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="4dp"
                android:layout_height="1dp"
                android:background="#DCDCDC"
                />


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/searchresultclassRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/seereview"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanumgodic"
                    android:textColor="#5DADE2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="리뷰보기"/>

                <TextView
                    android:id="@+id/seemorelecture"
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanumgodic"
                    android:textColor="#181818"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="수업 더 보기"/>

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>