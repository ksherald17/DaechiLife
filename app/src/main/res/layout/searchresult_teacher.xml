<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#ffffff"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout

                    android:layout_marginLeft="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/searchresultteacher"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:fontFamily="@font/nanumgodic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이지정 선생님"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textSize="11sp"
                            android:textColor="#c2185b"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="리뷰보기"/>

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_marginLeft="17dp"
                android:textColor="#181818"
                android:textSize="11sp"
                android:gravity="center"
                android:fontFamily="@font/nanumgodic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#수능영어 #내신영어"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/subclass1"
                    app:cardBackgroundColor="#bcaaa4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="1dp"
                        android:background="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_margin="1dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.85"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="66dp"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/nanumgodic"
                                    android:textSize="12sp"
                                    android:textColor="#606060"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KNS어학원"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:fontFamily="@font/nanumgodic"
                                        android:textSize="15sp"
                                        android:textColor="#000000"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SKY 심화반"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:textColor="#606060"
                                        android:layout_marginLeft="0dp"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/nanumgodic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="수 6:00PM ~ 9:30PM / 일 11:00AM ~ 1:30PM"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#DCDCDC"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.14"
                            android:layout_height="18dp"
                            android:src="@mipmap/stargray"/>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_below="@id/subclass1"
                    android:id="@+id/subclass2"
                    app:cardBackgroundColor="#bcaaa4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_margin="1dp"
                        android:background="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_margin="1dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.85"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="66dp"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/nanumgodic"
                                    android:textSize="12sp"
                                    android:textColor="#606060"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="KNS어학원"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:fontFamily="@font/nanumgodic"
                                        android:textSize="15sp"
                                        android:textColor="#000000"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SKY 심화반"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:textColor="#606060"
                                        android:layout_marginLeft="0dp"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/nanumgodic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="수 6:00PM ~ 9:30PM / 일 11:00AM ~ 1:30PM"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="#DCDCDC"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            />

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="0.14"
                            android:layout_height="18dp"
                            android:src="@mipmap/stargray"/>

                    </LinearLayout>



                </android.support.v7.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:background="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <TextView
                    android:id="@+id/seemoreclass"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/nanumgodic"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="이지정쌤 수업 더보기"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>